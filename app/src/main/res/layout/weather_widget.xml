<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_temp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="20Â°"
            android:fontFamily="@font/roboto_thin"
            android:textSize="64sp"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/img_icon"
            android:layout_toLeftOf="@id/tv_temp"
            android:layout_width="56dp"
            android:layout_height="56dp" />
    </LinearLayout>
    <TextView
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time_update"
        android:layout_below="@id/linear_layout"
        android:text="last update : 00:37"
        android:fontFamily="@font/roboto_thin"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_below="@id/tv_time_update"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/is_location_enable"
            android:layout_gravity="center_vertical"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_location_white_24dp" />
        <TextView
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_location"
            android:layout_below="@id/tv_time_update"
            android:text="New York"
            android:fontFamily="@font/roboto_thin"
            android:textSize="18sp"
            />
    </LinearLayout>

</RelativeLayout>