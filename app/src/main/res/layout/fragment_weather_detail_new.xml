<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_above="@id/space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refresh_layout">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollView_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/main_details_layout"
                    android:layout_width="match_parent"
                    android:layout_height="272dp">
                    <ImageView
                        android:id="@+id/background_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="#000"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/black_gradient"/>
                    <TextView
                        android:id="@+id/tv_city_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="8dp"
                        android:elevation="4dp"
                        android:text="Hanoi"
                        android:fontFamily="@font/roboto_thin"
                        android:textSize="21sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="4dp"
                        android:elevation="4dp"
                        android:text="rain"
                        android:fontFamily="@font/roboto_thin"
                        android:textSize="19sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="8dp"
                        android:elevation="4dp"
                        android:text="26 C"
                        android:fontFamily="@font/roboto_thin"
                        android:textSize="80sp"
                        app:layout_constraintBottom_toTopOf="@+id/tv_city_name"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="8dp"
                        android:elevation="4dp"
                        android:src="@drawable/ic_location_on_24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_city_name" />

                </android.support.constraint.ConstraintLayout>
                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/black">
                    <TextView
                        android:text="@string/details_title"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_thin"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corners_button"
                            android:paddingBottom="4dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">
                            <ImageView
                                android:src="@drawable/ic_humidity"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#7fffffff"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Humidity"/>
                            <TextView
                                android:id="@+id/tv_humidity"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="86%"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corners_button"
                            android:paddingBottom="4dp"
                            android:layout_weight="1"

                            android:layout_marginStart="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">
                            <ImageView
                                android:src="@drawable/ic_wind"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#7fffffff"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/WindSpeed"/>
                            <TextView
                                android:id="@+id/tv_wind_speed"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20km/h"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corners_button"
                            android:paddingBottom="4dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">
                            <ImageView
                                android:src="@drawable/ic_thermalmeter_light"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#7fffffff"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/DewPoint"/>
                            <TextView
                                android:id="@+id/tv_dew_point"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 C"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corners_button"
                            android:paddingBottom="4dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">
                            <ImageView
                                android:src="@drawable/ic_cloud"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#7fffffff"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/CloudCover"/>
                            <TextView
                                android:id="@+id/tv_cloud_cover"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="86%"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corners_button"
                            android:paddingBottom="4dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">
                            <ImageView
                                android:src="@drawable/ic_sun"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#7fffffff"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/UVIndex"/>
                            <TextView
                                android:id="@+id/tv_uv_index"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20km/h"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_corners_button"
                            android:paddingBottom="4dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">
                            <ImageView
                                android:src="@drawable/ic_visibility"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#7fffffff"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Visibility"/>
                            <TextView
                                android:id="@+id/tv_visibility"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:padding="4dp"
                                android:fontFamily="@font/roboto_thin"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 C"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/next_24_hours_title"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/white"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rcv_hourly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <TextView
                        android:text="@string/air_quality_index_title"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/white"/>
                    <RelativeLayout
                        android:id="@+id/relative_layout_aqi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">
                        <TextView
                            android:id="@+id/tv_aqi_index"
                            android:layout_alignParentLeft="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="48sp"
                            android:text="125"
                            android:textColor="#ffffff"
                            android:fontFamily="@font/roboto_thin"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_toRightOf="@id/tv_aqi_index"
                            android:paddingLeft="8dp"
                            android:weightSum="2">
                            <TextView
                                android:id="@+id/tv_aqi_level"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/aqi_unhealthy_sensitive"
                                android:textSize="17sp"
                                android:fontFamily="@font/roboto_thin"
                                android:textStyle="bold"
                                android:textColor="#ffffff"/>
                            <TextView
                                android:id="@+id/tv_aqi_des"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/aqi_unhealthy_des"
                                android:textSize="15sp"
                                android:textColor="#7fffffff"
                                android:fontFamily="@font/roboto_thin" />
                        </LinearLayout>
                    </RelativeLayout>
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_marginTop="8dp">
                        <LinearLayout
                            android:id="@+id/index_number_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_thin"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:text="0" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_thin"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:text="50" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_thin"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:text="100" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_thin"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:text="150" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:fontFamily="@font/roboto_thin"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:text="200" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:fontFamily="@font/roboto_thin"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:text="300" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:fontFamily="@font/roboto_thin"
                                android:textColor="#ffffff"
                                android:textSize="12sp"
                                android:text="500" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/index_scale"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/index_number_layout"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/aqi_good" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/aqi_moderate" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/aqi_unhealthy_sensitive" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/aqi_unhealthy" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@color/aqi_very_unhealthy" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:background="@color/aqi_hazardous" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/aqi_index_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/circle_shape"
                            android:contentDescription="index indicator"
                            app:layout_constraintTop_toTopOf="@id/index_scale"
                            app:layout_constraintBottom_toBottomOf="@id/index_scale"
                            app:layout_constraintStart_toStartOf="@id/index_scale" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginTop="4dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/index_scale">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/aqi_good"
                                android:textColor="#ffffff"
                                android:fontFamily="@font/roboto_thin"
                                android:textSize="12sp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="@string/aqi_hazardous"
                                android:textColor="#ffffff"
                                android:fontFamily="@font/roboto_thin"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </android.support.constraint.ConstraintLayout>
                    <ListView
                        android:visibility="gone"
                        android:id="@+id/lv_description_aqi"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"></ListView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:text="@string/next_7_days_title"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="@color/white"/>
                    <android.support.v7.widget.RecyclerView
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/rcv_daily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ></android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="45dp" >
    </RelativeLayout>
</RelativeLayout>